<section>
    <div class="container mt-4">
        <div class="row m-auto">
            <a href="admin/add-products" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.no}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="height: 50px;width:50px;" src="/product-images/{{this._id}}.jpg"></td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>
</section>